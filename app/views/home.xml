<Alloy>
	<View id="wrapper">
		<View id="currentLocation">
			<Label id="currentCoordinates" class="currentValue" />
			<Label id="currentBearing" class="currentValue" />
			
			<Label id="currentCoordinatesLabel" class="currentLabel" text="CURRENT LOCATION" />
			<Label id="currentBearingLabel" class="currentLabel" text="CURRENT BEARING" />
		</View>
		
		<Label id="labelPrecision" class="groupLabel" text="SELECT SIGNAL STRENGTH AND PRECISION" />
		
		<View id="buttonGroupPrecision" class="buttonGroup">
			<View id="buttonPrecisionLow" index="0" class="buttonGroupButton">
				<Label text="LOW" class="buttonGroupLabel" />
			</View>
			
			<View id="buttonPrecisionMedium" index="1" class="buttonGroupButton">
				<Label text="MED" class="buttonGroupLabel" />
			</View>
			
			<View id="buttonPrecisionHigh" index="2" class="buttonGroupButton">
				<Label text="HIGH" class="buttonGroupLabel" />
			</View>
		</View>
		
		<Label id="labelDistance" class="groupLabel" text="SELECT DESIRED DISTANCE TO NEXT MEASUREMENT" />
		
		<View id="buttonGroupDistance" class="buttonGroup">
			<View id="buttonDistance1" index="0" class="buttonGroupButton">
				<Label text="1MI" class="buttonGroupLabel" />
			</View>
			
			<View id="buttonDistance5" index="1" class="buttonGroupButton">
				<Label text="5MI" class="buttonGroupLabel" />
			</View>
			
			<View id="buttonDistance10" index="2" class="buttonGroupButton">
				<Label text="10MI" class="buttonGroupLabel" />
			</View>
		</View>
		
		<View id="buttonGroupAction">
			<View id="buttonMark" class="buttonAction">
				<Label class="buttonActionLabel" text="MARK" />
			</View>
			
			<View id="buttonGPS" class="buttonAction">
				<Label id="buttonGPSLabel" class="buttonActionLabel" text="ADD TO GPS" />
			</View>
		</View>
		
		<View id="buttonLoadELT">
			<Label id="buttonLoadELTLabel" text="Proceed to ELT" />
		</View>
		
		<Label id="eltLabel" text="The ELT location has been determined. You can choose to load this position into your GPS by clicking the button above, or add another measurement." />
		
		<View id="eltCoordinate">
			<Label id="eltCoordinateLabel" text="ELT Location:" />
			<Label id="eltCoordinateValue" />
		</View>
	</View>
</Alloy>